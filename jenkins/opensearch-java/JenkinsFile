pipeline {
    agent {
        node {
            label 'Jenkins-Agent-al2-x64-m5xlarge'
        }
    }
    environment {
        ARTIFACT_PATH = "~/.m2/repository/org/opensearch/client/${params.VERSION}/"
        VERSION = "${params.VERSION}"
    }
    stages {
        stage('parameters') {
            steps {
                script {
                    properties([
                            parameters([
                                    string(
                                            defaultValue: '',
                                            name: 'COMMIT_ID',
                                            trim: true
                                    ),
                                    string(
                                            name: 'VERSION',
                                            trim: true
                                    )
                            ])
                    ])
                }
            }
        }
        stage('publish to maven local') {
            steps {
                // checkout the commit
                git url: 'https://github.com/opensearch-project/opensearch-java.git', branch: "${params.COMMIT_ID}"

                //publish to maven local
                sh('./gradlew publishtoMavenLocal')
                sh('ls -l ${ARTIFACT_PATH}')
            }
        }
    }
}